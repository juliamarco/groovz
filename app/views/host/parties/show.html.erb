<div class="party-container">
  <div class="room-info-wrapper room-info-panel" id='room-name'>
    <strong><h3 class='room-info-text'>Party Name:</h3></strong><p><%= facade.name %></p>
  </div>

  <div class="room-info-wrapper room-info-panel" id='room-code'>
    <strong><h3 class='room-info-text'>Party Code:</h3></strong><p><%= facade.code %></p>
  </div>

  <div class="player-container">
    <div id="host-album-art">
      <%= image_tag('album-loading.gif', class: 'album-artwork', id: 'album-art') %>
    </div>
    <div class="track-info" id="host-track-info">
      <h4 id="track-title">Welcome to Groovz!</h4>
      <p id="track-artist">Click 'Start Partying' to kick this off</p>
    </div>
    <div class="player-control-section hide" id='player-controls'>
      <div id="save-button" class="icon">
        <img src="plus_template.png" alt="Plus-button" class="icon" id="save-track">
      </div>
      <div id="pause-play-button" class="icon">
        <img src="pause-button.png" alt="Pause-play-button" class="icon" id="pause-play" onclick="playSong()">
      </div>
      <div class="next-button icon">
        <img src="skip-button.png" alt="Plus-button" class="icon" id='skip-icon' onclick="skipTrack()">
      </div>
    </div>
    <div id="start-party-button">
      <%= button_tag 'Start Partying', onclick: 'startPlayback()', class: 'btn btn-primary rounded' %>
    </div>
  </div>

  <div id='leave-party-button'>
    <%= button_to 'Shut It Down', cancel_party_path, method: :delete, class: 'btn btn-boxed' %>
  </div>
</div>

<script type="text/javascript">
  const roomCode = '<%= facade.code %>'
</script>
<script type="text/javascript" src="/partyshow.js"></script>
